<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item
                android:top="2dp"
                android:bottom="2dp"
                android:left="2dp"
                >
                <shape android:shape="rectangle">
                    <solid android:color="@color/tabsSelect"/>
                    <corners android:radius="50dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item
                android:top="3dp"
                android:bottom="3dp"
                android:left="3dp"
                android:right="3dp"
                >
                <shape android:shape="rectangle">
                    <solid android:color="@color/primary"/>
                    <corners android:radius="50dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="15sp"
    android:paddingHorizontal="20sp"
    android:orientation="vertical"
    tools:context=".fragments.BottomSheetFragment"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/header"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:text="Tambah Data"
                android:textSize="18sp"
                android:paddingLeft="55sp"
                android:fontFamily="@font/ext"
                android:textColor="@color/primary"
                android:textAlignment="center"/>
            <ImageButton
                android:id="@+id/deleteItem"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="27sp"
                android:background="@android:color/transparent"
                android:src="@drawable/trash_svgrepo_com"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50sp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10sp"
                    android:src="@drawable/money_integral_line"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jumlah"
                        android:textColor="#676767"
                        android:fontFamily="@font/inter"
                        />
                    <EditText
                        android:id="@+id/editIdr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#676767"
                        android:inputType="number"
                        android:hint="@string/IDR"
                        android:textColor="@color/black"
                        android:fontFamily="@font/bold"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10sp"
                    android:padding="5sp"
                    android:src="@drawable/notes_multiple_svgrepo"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Catatan"
                        android:textColor="#676767"
                        android:fontFamily="@font/inter"
                        />
                    <EditText
                        android:id="@+id/editCatatan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#676767"
                        android:hint="Catatan"
                        android:textColor="@color/black"
                        android:fontFamily="@font/bold"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10sp"
                    android:src="@drawable/category_svgrepo"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kategori"
                        android:textColor="#676767"
                        android:fontFamily="@font/inter"
                        />
                    <Spinner
                        android:id="@+id/editCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/Theme.MaterialComponents.Light.BottomSheetDialog"
                        />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/submitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:layout_marginTop="200sp"
                android:text="Submit"
                android:backgroundTint="@color/primary"
                />

        </LinearLayout>

</LinearLayout>
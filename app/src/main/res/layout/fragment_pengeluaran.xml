<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.PengeluaranFragment">

    <LinearLayout
        android:id="@+id/wrapPengeluaran"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_view_primary"
        android:padding="15sp"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pengeluaran"
            android:textColor="@color/white"
            android:fontFamily="@font/bold"
            android:padding="5sp"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/totalPengeluaranFr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/IDR"
            android:textColor="@color/white"
            android:fontFamily="@font/ext"
            android:textSize="15sp"
            android:layout_marginTop="10sp"
            android:paddingHorizontal="5sp"
            android:paddingVertical="5sp"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPengeluaran"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/wrapPengeluaran"
        android:layout_marginTop="20sp"
        android:paddingHorizontal="25sp"
        />

</RelativeLayout>